# ===================================
# CheapData Frontend Environment Variables
# ===================================
# Note: All variables exposed to the client must have the VITE_ prefix

# ===================================
# API Configuration
# ===================================
# Backend API URL (use localhost for development, production URL for deployment)
VITE_API_URL=http://localhost:8000/api
# Alternative for production:
# VITE_API_URL=https://your-backend-domain.com/api

# ===================================
# Payment Integration
# ===================================
# Paystack Public Key (Get from: https://dashboard.paystack.com/#/settings/developer)
# Use test key (pk_test_...) for development
# Use live key (pk_live_...) for production
VITE_PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================================
# Push Notifications
# ===================================
# VAPID Public Key for web push notifications
# Generate using: npx web-push generate-vapid-keys
VITE_VAPID_PUBLIC_KEY=Bxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================================
# Application Settings
# ===================================
# Application Environment (development, staging, production)
VITE_APP_ENV=development

# Application Name
VITE_APP_NAME=CheapData

# Application URL
VITE_APP_URL=http://localhost:5173

# Enable Debug Mode (true/false)
VITE_DEBUG_MODE=true

# ===================================
# WhatsApp Integration
# ===================================
# WhatsApp Business Number (format: country code + number, no + or spaces)
# Example: 233593501488 for Ghana
VITE_WHATSAPP_NUMBER=233XXXXXXXXX

# Default WhatsApp Message
VITE_WHATSAPP_MESSAGE=Hello! I need help with CheapData services.

# ===================================
# Crypto Payment Wallets (Optional)
# ===================================
# Bitcoin Wallet Address
VITE_BTC_WALLET_ADDRESS=bc1qxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# USDT TRC20 Wallet Address
VITE_USDT_WALLET_ADDRESS=TRxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================================
# Analytics & Tracking (Optional)
# ===================================
# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel ID
VITE_FB_PIXEL_ID=XXXXXXXXXXXXXXXX

# ===================================
# Feature Flags (Optional)
# ===================================
# Enable/Disable Crypto Payments
VITE_ENABLE_CRYPTO_PAYMENTS=true

# Enable/Disable Custom Requests
VITE_ENABLE_CUSTOM_REQUESTS=true

# Enable/Disable Referral System
VITE_ENABLE_REFERRALS=true

# Enable/Disable Dark Mode
VITE_ENABLE_DARK_MODE=true

# ===================================
# Social Media Links (Optional)
# ===================================
VITE_FACEBOOK_URL=https://facebook.com/cheapdata
VITE_TWITTER_URL=https://twitter.com/cheapdata
VITE_INSTAGRAM_URL=https://instagram.com/cheapdata

# ===================================
# Network Configuration
# ===================================
# Supported Networks (comma-separated)
VITE_SUPPORTED_NETWORKS=MTN,Telecel,AirtelTigo

# ===================================
# Rate Limiting & Performance
# ===================================
# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Maximum Retry Attempts
VITE_MAX_RETRIES=3

# ===================================
# Security
# ===================================
# Enable HTTPS Only (true/false)
VITE_HTTPS_ONLY=false

# CORS Allowed Origins
VITE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===================================
# Logging & Monitoring
# ===================================
# Log Level (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# Enable Error Reporting
VITE_ENABLE_ERROR_REPORTING=true

# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=https://xxxxxx@sentry.io/xxxxxx
